<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_45"
    android:paddingRight="@dimen/dp_45"
    android:paddingTop="@dimen/dp_30"
    android:paddingBottom="@dimen/dp_30"
    tools:ignore="MissingDefaultResource,ResourceName">

    <TextView
        android:id="@+id/mTvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/color_999999"
        android:text="13:00"
        android:textSize="@dimen/dp_24" />

    <TextView
        android:id="@+id/mTvNotify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/mTvTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_1a999999_radius_7"
        android:padding="@dimen/dp_15"
        android:gravity="center"
        android:textColor="@color/color_8D9193"
        android:textSize="@dimen/dp_24"
        android:text="对方给你发送了一条消息无法识别" />

    <TextView
        android:id="@+id/mTvRetry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/mTvNotify"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp_10"
        android:drawableRight="@mipmap/ic_retry"
        android:gravity="center"
        android:textSize="@dimen/dp_28"
        android:textColor="@color/color_F7A730"
        android:text="点击重试"/>

</androidx.constraintlayout.widget.ConstraintLayout>